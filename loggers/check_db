#!/usr/bin/env bash

mysql -u root -pCNKlibrary <<MY_QUERY
USE homeautomation
SELECT * FROM weather WHERE dt BETWEEN DATE_SUB(NOW(), INTERVAL 1 HOUR) AND NOW();
SELECT * FROM sensors WHERE dt BETWEEN DATE_SUB(NOW(), INTERVAL 10 MiNUTE) AND NOW();
SELECT * FROM wifi WHERE dt BETWEEN DATE_SUB(NOW(), INTERVAL 5 HOUR) AND NOW();
